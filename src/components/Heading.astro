---
import type { HTMLTag, Polymorphic } from 'astro/types'
import { twMerge } from '../util'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>

const { class: pClass = '', as: Element = 'h2', ...props } = Astro.props
---

<Element class={twMerge('text-gray-100 text-heading', pClass)} {...props}>
  <slot />
</Element>
