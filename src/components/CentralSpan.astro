---
import { twMerge } from '../util'

const { Element = 'div', class: pClass = '' } = Astro.props

export interface Props {
  Element?: 'div' | 'section' | 'article' | 'footer'
  class?: string
}
---

<Element
  class={twMerge('col-start-1 col-end-5 sm:col-start-3 sm:col-end-11', pClass)}>
  <slot />
</Element>
