---
import { twMerge } from '../util'
const { Element = 'div', class: pClass = '' } = Astro.props

export interface Props {
  Element?: 'div' | 'header' | 'main' | 'footer'
  class?: string
}
---

<Element
  class={twMerge(
    'mx-8 grid max-w-6xl grid-cols-4 gap-x-6 sm:mx-auto sm:grid-cols-12',
    pClass
  )}>
  <slot />
</Element>
