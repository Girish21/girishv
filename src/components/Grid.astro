---
import type { HTMLTag, Polymorphic } from 'astro/types'

import { twMerge } from '../util'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>

const { as: Element = 'div', class: pClass = '' } = Astro.props
---

<Element
  class={twMerge(
    'mx-8 grid max-w-6xl grid-cols-4 gap-x-6 sm:mx-auto sm:grid-cols-12',
    pClass
  )}>
  <slot />
</Element>
